#include <stdio.h>
int main()
{
    int i, j, rows, k=0;
    printf (" Enter the rows: \n");
    scanf ("%d", &rows);

    for ( i =1; i <= rows; i++)
    {
        for ( j = 1; j < rows; j++)
        {
            printf ("  ");
        }
    }
        for ( k = 1; k <= i; k++)
        {
            printf (" * ");
        }
        for ( i =1; i <= rows; i++)
    {
        for ( j = 1; j < rows; j++)
        {
            printf ("  ");
        }
        printf ("\n");

    return 0;
}
